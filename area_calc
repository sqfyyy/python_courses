p = input()
if p == 'треугольник':
  a = float(input())
  b = float(input())
  c = float(input())
  d = (a + b + c) / 2
  s = (d*(d - a)*(d - b)* (d - c)) ** 0.5
  print(s)
elif p == 'прямоугольник':
  a = float(input())
  b = float(input())
  s1 = a * b 
  print(s1)
elif p == 'круг':
  a = float(input())
  pi = 3.14
  s3 = pi * (a ** 2)
  print(s3)
else:
  print('Неправильно введен тип комнаты')
